---
import { lucia } from "../../db/lucia";

const sessionId = Astro.cookies.get("session");

if (!sessionId) {
  return Astro.redirect("/?message=Please login to continue");
}

const { session, user } = await lucia.validateSession(sessionId.value);

if (!session || !user) {
  return Astro.redirect("/?message=Please login to continue");
}
